extends ../shared/template
block content
  .row
    .col-xs-6
      form(role='form', method='post', action='/trips', enctype='multipart/form-data')
        .form-group
          label(for='name') Label Your Trip
          input.form-control#name(type='text', name='name', autofocus=true)
        .form-group
          label(for='cash') Cash Available
          input.form-control#cash(type='number', name='cash')
        .form-group
          label(for='start') Start Date
          input.form-control#start(type='date', name='start')
        .form-group
          label(for='end') End Date
          input.form-control#end(type='date', name='end')
        .form-group
          label(for='photo') Car Photo
          input.form-control#photo(type='file', name='photo', multiple=false)
        .form-group
          label(for='mpg') Miles Per Gallon
          input.form-control#mpg(type='number', name='mpg')
    .col-xs-6
        .form-group
          label(for='startPoint') Starting Point
          input.form-control#startPoint(type='text', name='startPoint', placeholder='New York')
          input#lat1(type='hidden', name='startPoint')
          input#lng1(type='hidden', name='startPoint')
        .form-group
          label(for='endPoint') End Point
          input.form-control#endPoint(type='text', name='endPoint', placeholder = 'California')
          input#lat2(type='hidden', name='endPoint')
          input#lng2(type='hidden', name='endPoint')
        .form-group
          label(for='gasCost') Cost of Gas per Gallon 
          input.form-control#gasCost(type='number', step= 'any')

        button.btn.btn-primary(type='submit') Start Your Trip!


block scripts
  script(src='/js/user/new-trip.js')

